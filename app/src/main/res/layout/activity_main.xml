<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Facebook"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/azul"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero de celular o correo electronico"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0"
        android:layout_marginHorizontal="8dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0"
        android:layout_marginHorizontal="8dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000FF"
        android:textColor="@color/white"
        android:layout_margin="8dp"
        android:backgroundTint="@color/azul"
        android:text="Iniciar sesión" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="¿Olvidaste tu contraseña?"
        android:textColor="@color/azul"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#0000FF"
        android:textColor="@color/white"
        android:layout_margin="8dp"
        android:backgroundTint="#008000"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Crear cuenta nueva" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Español"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English(US)"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/azul"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Françis(France)"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/azul"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Português(Brasil)"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/azul"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="中文(简体)"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/azul"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Italiano"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/azul"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mas idiomas"
        android:textSize="18sp"
        android:textColor="@color/azul"
        android:layout_marginLeft="dp" />


</LinearLayout>